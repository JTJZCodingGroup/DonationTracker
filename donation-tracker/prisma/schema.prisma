generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Projects {
  id         String @id @default(uuid())
  created_at DateTime @default(now())
  name       String @unique
  goal       Int
  progress   Int
  end_date   DateTime
  donations  Donations[] 
}

model Donations {
  id         String @id @default(uuid())
  project_id String
  donated_at DateTime @default(now())
  amount     Int
  project    Projects @relation(fields: [project_id], references: [id], onDelete: Cascade)
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  created_at DateTime @default(now())
}
