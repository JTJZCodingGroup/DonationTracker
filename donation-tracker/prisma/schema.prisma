generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Projects {
  id         String @id @default(uuid())
  created_at DateTime @default(now())
  name       String @unique
  goal       BigInt 
  progress   BigInt 
  end_date   DateTime
}
